<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.languages.LanguagesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/light_bg"
        >
        <TextView
            android:id="@+id/text_langs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingVertical="20dp"
            android:text="@string/contacts_welcome"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/button_chatnow"
                android:backgroundTint="@color/bg_white"
                android:layout_margin="7dp"
                app:cardElevation="1dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2"
                    android:layout_gravity="center_vertical"
                   >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"

                        android:layout_marginHorizontal="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_rate_review_24">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/chatnow_prompt"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        android:gravity="center_vertical">

                    </TextView>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/button_chatwhatsapp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:backgroundTint="@color/bg_white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="0.5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/whatsapp_logo"
                        android:tintMode="add">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/chatwhatapp_prompt"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"

                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/button_chatphone"
                android:backgroundTint="@color/bg_white"
                android:layout_margin="7dp"
                app:cardElevation="1dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight=".5"

                        android:layout_marginHorizontal="10dp"
                        android:scaleType="fitCenter"

                        android:src="@drawable/ic_baseline_call_24">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/chatcall_prompt"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/button_chatemail"
                android:backgroundTint="@color/bg_white"
                android:layout_margin="7dp"
                app:cardElevation="1dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2"
                    android:layout_gravity="center_vertical">

                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight=".5"

                        android:layout_marginHorizontal="10dp"
                        android:scaleType="fitCenter"

                        android:src="@drawable/ic_baseline_alternate_email_24">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/chatemail_prompt"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>