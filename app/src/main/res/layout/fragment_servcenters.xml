<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.servcenters.ServcentersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        >


        <TextView
            android:id="@+id/text_langs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="32dp"
            android:paddingVertical="5dp"
            android:text="@string/servcenters_welcome"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"/>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="32dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxStrokeColor="@color/purple_500"
            app:boxStrokeErrorColor="@color/red"
            app:startIconDrawable="@drawable/ic_baseline_language_24"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319">

            <AutoCompleteTextView
                android:id="@+id/servcenters_autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/servcenters_prompt"
                android:textColor="@color/grey"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="200dp">

            </AutoCompleteTextView>


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_showstores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:text="@string/btn_showstores"
            android:paddingVertical="10dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>