<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"


    >

    <TextView
        android:id="@+id/tv_clientmsg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="@color/white"
        android:padding="12dp"
        android:text="This is a sample message that will appear"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_botmsg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="@color/purple_500"
        android:padding="12dp"
        android:text="This is a sample message that will appear"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatlinks_btn1"
        android:padding="10dp"
        android:backgroundTint="@color/bg_white"
        android:textColor="@color/purple_500"
        android:text="How to do x and y"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_botmsg"
        android:elevation="1dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatlinks_btn2"
        android:padding="10dp"
        android:backgroundTint="@color/bg_white"
        android:textColor="@color/purple_500"
        android:text="How to do x and y"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_centerInParent="true"
        android:layout_below="@id/chatlinks_btn1"
        android:elevation="1dp"

        />

    <Button
        android:id="@+id/chatlinks_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatlinks_btn2"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/bg_white"
        android:elevation="1dp"
        android:padding="10dp"
        android:text="How to do x and y"
        android:textColor="@color/purple_500"
        android:textSize="11sp"
        android:textStyle="normal"

        />


</RelativeLayout>